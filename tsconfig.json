{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "target": "esnext",
    "sourceMap": true,
    "allowJs": true,
    "noEmit": true
  },
  "include": [
    "lib/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
 }
